            <string>///Camera
if (!is_cinematic_displayed()) 
{
    
    //2-player camera 
    var player1 = instance_find(obj_Hero,0);
    var player2 = instance_find(obj_Hero,1);
        
    if (global.coop) &amp;&amp; (player1) &amp;&amp; (player2) &amp;&amp; (instance_exists(player1)) &amp;&amp; (instance_exists(player2)) {
            viewdist = 2;
            //viewx = (player1.x + player2.x)/2; 
            //viewy = (player1.y + player2.y)/2;
            viewx = ((player1.x-view_wview/2)*(viewdist-1) + (player2.x-view_wview/2)*(viewdist-1))/2;
            viewy = ((player1.y-view_wview/2)*(viewdist-1) + (player2.y-view_wview/2)*(viewdist-1))/2;
            
    } else {
    Player = obj_Hero;
    if ( instance_exists(Player) )
    {
        viewdist = 4
    
        if Player.name[Player.char] = "ARCHER" or Player.name[Player.char] = "THIEF"
        viewdist = 3
    
        if Player.hp &gt; 0
        {
            viewx = ((Player.x-view_wview/2)*(viewdist-1)+(mouse_x-view_wview/2))/viewdist
            viewy = ((Player.y-view_hview/2)*(viewdist-1)+(mouse_y-view_hview/2))/viewdist
        }
    
    }
    }
    if (global.smooth_camera)
    {
        viewx2 = viewx2-(viewx2-viewx)*0.4
        viewy2 = viewy2-(viewy2-viewy)*0.4
    }
    else
    {
        viewx2 = viewx;
        viewy2 = viewy;
    }
} else
{
    if (cutscene_target!=-1)
    {
        if (instance_exists(cutscene_target))
        {
            viewx2 = cutscene_target.x;
            viewy2 = cutscene_target.y;
        }
    }
    else
    {
        viewx2 = getCinematicX();
        viewy2 = getCinematicY();
    }
    viewx2 -=view_wview[0]*0.5;
    viewy2 -=view_hview[0]*0.5;
}


//Shake

if global.screen_shake
{
    view_xview = ceil(viewx2+(random(global.shake)-global.shake/2))
    view_yview = ceil(viewy2+(random(global.shake)-global.shake/2))
}else
{
    view_xview = ceil(viewx2)
    view_yview = ceil(viewy2)
}

if global.shake &gt; (global.screen_shake/100)*10
global.shake *= 0.8
if global.shake &gt; 0
global.shake -= 1
else
global.shake = 0


</string>
